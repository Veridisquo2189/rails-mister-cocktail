<div class="container">
<h1>List of cocktails</h1>
<% @cocktails.each do |cocktail|%>
<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %> </h5>
    <p class="card-text">Discover this classic cocktail</p>
    <%= link_to "See Recipe", cocktail_path(cocktail), class:"btn btn-primary"  %>
  </div>
</div>
<% end %>
</div>

<!-- Button trigger modal -->
<%= link_to "Create Cocktail", new_cocktail_path, class:"btn btn-primary" %>


