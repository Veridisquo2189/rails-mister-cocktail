<div class="container text-center">

  <h1><%= @cocktail.name%></h1>
  <img src="https://images.pexels.com/photos/970197/pexels-photo-970197.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="" style= "height: 200px;">
  <div class="card py-3 my-3 cocktail-card text-center" style="width: 18rem;">
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description%> <%=dose.ingredient.name%> <%= link_to "delete dose", dose_path(dose), method: :delete %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to "List of cocktails", cocktails_path, class: "btn btn-primary"  %>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>
